<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="circolo.view.PartiteMatchplayController">
   <center>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nomeGironeColumn" prefWidth="75.0" text="Girone A">
               <columns>
                  <TableColumn fx:id="Giocatore1" prefWidth="297.0" />
                  <TableColumn prefWidth="102.0" text="VS" />
                  <TableColumn fx:id="Giocatore2" prefWidth="75.0" />
               </columns>
            </TableColumn>
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="38.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handlePartiteGironeD" text="Girone D" />
            <Button mnemonicParsing="false" onAction="#handlePartiteGironeC" text="Girone C" />
            <Button mnemonicParsing="false" onAction="#handlePartiteGironeB" text="Girone B" />
            <Button mnemonicParsing="false" onAction="#handlePartiteGironeA" text="Girone A" />
        </buttons>
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
      </ButtonBar>
   </top>
</BorderPane>
